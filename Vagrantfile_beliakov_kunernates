Vagrant.configure("2") do |config|
  config.vm.define "master" do |subconfig|
    subconfig.vm.box = "sbeliakou/centos"
    subconfig.vm.hostname = "master"
    subconfig.vm.network :private_network, ip: "192.168.56.100"
    subconfig.ssh.insert_key = false
    config.vm.provider :virtualbox do |v|
      v.customize ["modifyvm", :id, "--memory", 2048]
      v.name="master"
    end
  end

  config.vm.define "worker" do |subconfig|
    subconfig.vm.box = "sbeliakou/centos"
    subconfig.vm.hostname = "worker"
    subconfig.vm.network :private_network, ip: "192.168.56.110"
    subconfig.ssh.insert_key = false
    config.vm.provider :virtualbox do |v|
      v.customize ["modifyvm", :id, "--memory", 1512]
      v.name="worker"
    end
  end
end
